---
import dayjs from 'dayjs';

const { post } = Astro.props;
---

<a href={post.url}
  class="transition-all duration-75 ease-in-out h-full block relative top-0 
  hover:-top-2 shadow-lg hover:shadow-xl bg-white rounded-lg overflow-hidden"
  data-test="article-card">

  <img class="squiggle rounded-lg" src={post.frontmatter.hero} 
    alt={post.frontmatter.title} width="360" 
    height="192">
  <div class="py-6 px-8">
    <h2 class="font-bold text-2xl leading-tight">
      {post.frontmatter.title}
    </h2>
    <p class="text-xs text-gray-600 mt-4 flex items-center">
      {post.frontmatter.pubDate}
    </p>
  </div>
</a>

<style>
  img {
    width: 100%;
    aspect-ratio: 15/7;
    object-fit: cover;
  }
</style>